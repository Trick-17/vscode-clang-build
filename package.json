{
	"name": "vscode-clang-build",
	"displayName": "vscode-clang-build",
	"description": "C-language build system based on clang",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.build",
				"title": "clang-build: build"
			},
			{
				"command": "extension.selectTargets",
				"title": "clang-build: select targets"
			},
			{
				"command": "extension.selectBuildType",
				"title": "clang-build: select build type"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "project-explorer",
					"title": "Project Explorer",
					"icon": "resources/activity.svg"
				}
			]
		},
		"views": {
			"project-explorer": [
				{
					"id": "project-explorer-projects",
					"name": "Projects"
				},
				{
					"id": "project-explorer-target-details",
					"name": "Target details"
				},
				{
					"id": "project-explorer-tests",
					"name": "Tests"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "project-explorer",
				"contents": "No project found"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.45.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}